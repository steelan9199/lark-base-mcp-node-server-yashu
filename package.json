{
  "name": "base-mcp-server",
  "version": "1.3.0",
  "description": "Airtable Model Context Protocol Server, for allowing AI systems to interact with your Airtable bases",
  "license": "MIT",
  "author": "Adam Jones (domdomegg)",
  "repository": {
    "type": "git",
    "url": "https://github.com/domdomegg/airtable-mcp-server.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": "dist/index.js",
  "scripts": {
    "dev": "npm run build && node ./dist/index.js",
    "start": "node ./dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json && shx chmod +x dist/index.js",
    "build:watch": "nodemon --watch src --ext ts --exec \"npm run build\"",
    "prepublishOnly": "npm run clean && npm run build",
    "bundle": "esbuild src/bundle-entry.js --bundle --platform=node --format=esm --outfile=dist/bundle.js --inject:./src/require-shim.js --external:module --external:util --external:path --external:fs --external:stream --external:http --external:https --external:os --external:crypto --external:zlib --external:net --external:tls --external:url --external:dns --external:querystring && shx chmod +x dist/bundle.js"
  },
  "dependencies": {
    "@lark-base-open/node-sdk": "1.0.1",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.9.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^22.10.2",
    "eslint": "^8.57.0",
    "@types/express": "^5.0.1",
    "eslint-config-domdomegg": "^1.2.3",
    "nodemon": "^3.1.7",
    "shx": "^0.3.4",
    "tsconfig-domdomegg": "^1.0.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.7"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-domdomegg"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "always"
      ]
    }
  }
}
